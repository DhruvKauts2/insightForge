# Application
APP_NAME=LogFlow
ENVIRONMENT=production

# Kafka (use Docker service name)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_RAW_LOGS=logs-raw

# Elasticsearch (use Docker service name)
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
ELASTICSEARCH_INDEX_PREFIX=logs

# PostgreSQL (use Docker service name)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=logflow
POSTGRES_PASSWORD=logflow123
POSTGRES_DB=logflow

# Redis (use Docker service name)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Authentication
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
